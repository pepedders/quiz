<!DOCTYPE html>
<html>
  <head>
    <title>Quiz</title>
    <link href="https://fonts.googleapis.com/css?family=Raleway" rel="stylesheet" type="text/css">
    <link rel="icon" href="favicon.ico" type="image/x-icon" />
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <script src="https://use.fontawesome.com/d4353bcd4c.js"></script>
  </head>
  <body>
    <nav>
      <div class="nav-left">
        <p>
          <a class="nav-link" href="/">Quiz</a></footer>
        </p>
      </div>
      <div class="nav-right">
        <p>
        <% if (!session.user){ %>
          <a class="nav-link" href="/users/new">Registrarse</a>
          <a class="nav-link" href="/session">Login</a>
        <% } else { %>
          <a class="nav-link" href="/users/<%= session.user.id %>"><%= session.user.username %></a>
          <a class="nav-link" href="/session?_method=DELETE">Cerrar sesión</a>
        <% } %>
        </p>
      </div>
    </nav>
    <h1 class=title>Quiz</h1>

    <div id="flash">
      <% if(messages.info){ %>
        <div class="message info">
          <span class="dismiss"><i class="fa fa-times" aria-hidden="true"></i></span>
          <h3>Información de interes</h3>
            <% for(var i in messages.info) { %>
              <p> <%= messages.info[i] %> </p>
            <% } %>
        </div>
      <% } %>
      <% if(messages.success){ %>
        <div class="message success">
          <span class="dismiss"><i class="fa fa-times" aria-hidden="true"></i></span>
          <h3>Tareas completadas con éxito</h3>
            <% for(var i in messages.success) { %>
              <p> <%= messages.success[i] %> </p>
            <% } %>
        </div>
      <% } %>
      <% if(messages.error){ %>
        <div class="message error">
          <span class="dismiss"><i class="fa fa-times" aria-hidden="true"></i></span>
          <h3>Errores encontrados:</h3>
            <% for(var i in messages.error) { %>
              <p> <%= messages.error[i] %> </p>
            <% } %>
        </div>
      <% } %>
    </div>

    <section>
        <%- body %>
    </section>

    <footer>
      <a class="footer-link" href="https://github.com/pepedders/quiz">Enlace a la página del proyecto en GitHub</a>
      &#47;
      <a class="footer-link" href="/author">Autores del proyecto</a>
      &#47;
      <a class="footer-link" href="/">Página principal de Quiz</a>
      &#47;
      <a class="footer-link" href="/users">Usuarios</a>
    </footer>

    <script   src="/javascripts/jquery.js"></script>
    <script   src="http://code.jquery.com/jquery-2.2.3.js"   integrity="sha256-laXWtGydpwqJ8JA+X9x2miwmaiKhn8tVmOVEigRNtP4="   crossorigin="anonymous"></script>
    <script   src="https://code.jquery.com/ui/1.11.4/jquery-ui.js"   integrity="sha256-DI6NdAhhFRnO2k51mumYeDShet3I8AKCQf/tf7ARNhI="   crossorigin="anonymous"></script>
    <script   src="/javascripts/script.js"></script>
  </body>
</html>
